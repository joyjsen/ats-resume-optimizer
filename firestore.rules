rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && request.auth.token.email == 'pjmarket1316@gmail.com';
    }

    // Helper function to check if document belongs to anonymous user (for migration)
    function isAnonymousData() {
      return resource.data.userId == 'anonymous_user' || resource.data.uid == 'anonymous_user';
    }

    // Analysis tasks - users can only access their own tasks
    match /analysis_tasks/{taskId} {
      allow read: if isAuthenticated() &&
                     (resource == null || resource.data.userId == request.auth.uid);
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() &&
                      (resource == null || resource.data.userId == request.auth.uid);
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // Analysis history - users can only access their own history (admin can access all for management)
    match /user_analyses/{historyId} {
      allow read: if isAuthenticated() &&
                     (resource.data.userId == request.auth.uid || isAdmin());
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() &&
                       (resource.data.userId == request.auth.uid || isAdmin());
      allow delete: if isAuthenticated() && (resource.data.userId == request.auth.uid || isAdmin());
    }

    // User activity logs - users can only access their own activity (admin can access all for analytics)
    match /activities/{activityId} {
      allow read: if isAuthenticated() &&
                     (resource == null || resource.data.userId == request.auth.uid || resource.data.uid == request.auth.uid || isAdmin());
      allow create: if isAuthenticated() &&
                       (request.resource.data.userId == request.auth.uid || request.resource.data.uid == request.auth.uid || isAdmin());
      allow update: if isAuthenticated() &&
                       (resource.data.userId == request.auth.uid || resource.data.uid == request.auth.uid || isAdmin());
      allow delete: if isAdmin();
    }

    // Job applications - users can only access their own applications (admin can access all for management)
    match /user_applications/{applicationId} {
      allow read: if isAuthenticated() &&
                     (resource.data.userId == request.auth.uid || isAdmin());
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() &&
                       (resource.data.userId == request.auth.uid || isAdmin());
      allow delete: if isAuthenticated() && (resource.data.userId == request.auth.uid || isAdmin());
    }

    // Learning resources - users can only access their own learning data (admin can access all for management)
    match /user_learning/{learningId} {
      allow read: if isAuthenticated() &&
                     (resource.data.userId == request.auth.uid || isAdmin());
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() &&
                       (resource.data.userId == request.auth.uid || isAdmin());
      allow delete: if isAuthenticated() && (resource.data.userId == request.auth.uid || isAdmin());
    }

    // User profiles - users can only access their own profile (admin can access all for management)
    match /users/{userId} {
      allow read: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
      allow delete: if isAdmin();
    }

    // Background tasks - users can create and read their own tasks
    // The Cloud Function updates these documents
    match /background_tasks/{taskId} {
      allow read: if isAuthenticated() &&
                     (resource == null || resource.data.userId == request.auth.uid);
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if false; // Only Cloud Functions can update
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Deleted accounts archive - user can create/update their own, admin can manage any
    match /deleted_accounts/{userId} {
      allow create, update: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
      allow read, delete: if isAdmin();
    }

    // Audit trail for permanently deleted accounts - admin only
    match /audit_trail/{userId} {
      allow read, write: if isAdmin();
    }

    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
